{
  "name": "dithermark",
  "type": "module",
  "version": "1.0.0",
  "description": "Web application to interactively demonstrate image dithering algorithms",
  "main": "js_src/index.js",
  "sideEffects": [
    "./js_src/app/vues/*.vue"
  ],
  "scripts": {
    "start": "node server/index.js",
    "watch": "webpack --config build/webpack.config.cjs --watch",
    "build": "npm run build:html && npm run build:js",
    "build:html": "node build/build.js",
    "build:js": "webpack --config build/webpack.config.cjs",
    "deploy": "npm run deploy:html && npm run deploy:js",
    "deploy:html": "IS_PRODUCTION=true node build/build.js",
    "deploy:js": "webpack --config build/webpack.production.config.cjs",
    "electron:js": "webpack --config build/webpack.electron.config.cjs",
    "seed:unsplash": "node scripts/unsplash-random-images.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allen-garvey/dithermark.git"
  },
  "author": "Allen Garvey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allen-garvey/dithermark/issues"
  },
  "homepage": "https://github.com/allen-garvey/dithermark#readme",
  "dependencies": {
    "dithermark-vue-color": "2.2.0",
    "vue": "3.5.12"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "3.5.12",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "express": "^4.21.1",
    "mini-css-extract-plugin": "^2.9.2",
    "sass": "^1.80.5",
    "sass-loader": "^16.0.3",
    "terser-webpack-plugin": "^5.3.10",
    "vue-loader": "17.4.2",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}